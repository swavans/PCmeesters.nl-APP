<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.pcmeesters.pcmeestersnl">
    <uses-permission android:name="android.permission.CALL_PHONE"></uses-permission>
    <uses-permission android:name="android.permission.DIAL_PHONE"></uses-permission>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application

        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:icon = "@drawable/icon"
        android:theme="@style/AppTheme.NoActionBar"
        android:screenOrientation="portrait">

        <activity
            android:screenOrientation="portrait"
            android:name=".SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ActivityActivity3"
            android:screenOrientation="portrait"
            />
        <activity android:name=".InternetProblemsActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".TipActivity"
            android:screenOrientation="portrait"
            />
    </application>

</manifest>